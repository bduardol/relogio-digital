module separador(
    input wire [4:0] in,  // Entrada de 5 bits vinda do m贸dulo inicial
    output wire modo_relogio,      // Modo Rel贸gio
    output wire modo_cronometro,   // Modo Cron么metro
    output wire modo_timer,        // Modo Timer
    output wire ajuste_relogio,    // Ajuste da hora do Rel贸gio
    output wire ajuste_timer       // Ajuste da hora do Timer
);

assign modo_relogio = in[0];      // Primeiro bit
assign modo_cronometro = in[1];   // Segundo bit
